RewriteEngine On

# Auto-serve admin/index.html for /admin URL
RewriteRule ^admin/?$ admin/index.html [L]

# Allow access to admin directory contents
RewriteRule ^admin/ - [L]

# Allow access to backend APIs
RewriteRule ^backend/api/ - [L]

# Protect config files
<Files "database.php">
    Deny from all
</Files>

# Allow all other files
<Files "*">
    Require all granted
</Files