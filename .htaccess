# In your public_html/.htaccess
RewriteEngine On

# Allow access to backend APIs
<Files "*.php">
    Require all granted
</Files>

# Protect sensitive files
<Files "database.php">
    Deny from all
</Files>

# Set upload directory permissions
<Directory "/backend/uploads">
    Allow from all
    AllowOverride All
    Require all granted
</Directory>